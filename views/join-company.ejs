<%- include("partials/header.ejs") %>
<div class="join-us-main">
    <div class="form-main">
        <img src="Assets/partners.jpg" class="form-illust" alt="log in or register">
        <form action="/join-us" method="post">
            <h1>Partner with Us</h1>
            <div class="form-group">
                <label for="text">Company Name</label>
                <input type="text" autofocus required name="company" id="company">
            </div>
            <div class="form-group">
                <label for="text">Phone Number</label>
                <input type="text" required name="phone" id="phone">
            </div>
            <div class="form-group">
                <label for="text">Service Type</label>
                <input type="text" required name="service" id="service">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" required name="email" id="email">
            </div>
            <button class="btn" type="submit">JOIN</button>
        </form>
    </div>
</div>
<%- include("partials/footer.ejs") %> 